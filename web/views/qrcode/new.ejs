<% include ../partials/header %>
    <div class="container">
        <div class="row">

            <h3 class="h3 qrnew__h3 text-center">Introduce la información para generar un QR para procesar el pago</h3>

            <div class="form-container">
                <form action="/qr" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="product" required placeholder="Producto">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="productType" required placeholder="Tipo de producto">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="alias" required placeholder="Motivo de pago">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="refn" placeholder="Referencia Numérica">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="refa" required placeholder="Nombre del Beneficiario">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="amount" placeholder="Monto total">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Generar!</button>
                    </div>
                </form>
                <a href="/landing">Regresar</a>
            </div>

        </div>

    </div>
    <% include ../partials/footer %>